{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src/",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "typeRoots": [
        "./types",
        "./node_modules/@types"
      ],
      "types": [
        "Phaser"
      ]
    }
  },
  "include": [
    "src/*",
    "src/scenes/LoadScene.ts",
    "src/scenes/GameScene.ts",
    "src/game-objects/WarningLine.ts"
  ]
}